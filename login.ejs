<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edumate Login</title>
    <link rel="stylesheet" href="/public/login.css"> <!-- Ensure the path is correct -->
</head>
<body>

    <div class="logo-container">
        <img src="/public/images/csplogo.jpg" alt="Edumate Logo" class="logo"> <!-- Correct logo path -->
        <h1 class="caption">Connect. Learn. Grow.</h1>
    </div>

    <div class="form-container">
        <h2>Welcome Back</h2>
        <p class="subtitle">Please log in to access your educational resources</p>
        <form action="/login" method="post">
            <div class="form-group">
                <label for="username">Name:</label>
                <input type="text" id="username" name="username" placeholder="Enter your name" required autocomplete="off">
            </div>
            <div class="form-group">
                <label for="password">Password:</label>
                <input type="password" name="password" id="password" placeholder="Enter your password" required>
            </div>
            <button type="submit" class="submit-btn">Login</button>
        </form>
        <p class="signup-text">Don't have an account? <a href="/signup">Sign up</a></p> <!-- Updated link -->
    </div>

    <% if (typeof errorMessage !== 'undefined') { %>
        <div class="error-message">
            <p><%= errorMessage %></p>
        </div>
    <% } %>

</body>
</html>